# The tests below demonstrate the observe directive argument.

run
----
-- view:
VALUE: 'á‚’'ðŸ›‡

run observe=gostruct
----
-- gostruct:
&catwalk.structModel{x:4242}

run observe=debug
----
-- debug:
DEBUG SAYS HI

run trace=on observe=(view,gostruct,msgs,cmds)
type a
----
-- trace: before "type a"
-- trace: after "type"
-- view:
VALUE: 'á‚’'ðŸ›‡
-- gostruct:
